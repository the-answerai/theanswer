# ==================================================
# WEB SERVICE AUTH0 CONFIGURATION
# ==================================================
# Auth0 settings for Next.js web application
AUTH0_JWKS_URI=
AUTH0_ISSUER_BASE_URL=
AUTH0_BASE_URL=  # Should match CLIENT_DOMAIN from deployment
AUTH0_AUDIENCE=https://theanswer.ai
AUTH0_SCOPE="openid profile email"
AUTH0_TOKEN_SIGN_ALG=RS256
AUTH0_DOMAIN=
AUTH0_ORGANIZATION_ID=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# Auth0 Secret: 32-byte hex-encoded secret for session cookie encryption
# Used by both server-side JWT validation and client-side session management
# Must be consistent across all instances to maintain session persistence
# Generate with: openssl rand -hex 32
AUTH0_SECRET=

# ==================================================
# ADDITIONAL CONFIGURATION
# ==================================================
# Feature flags and debugging
FLAGSMITH_ENVIRONMENT_ID=

# Debug settings (disable in production)
DEBUG=true
VERBOSE=true
LOG_LEVEL=debug
DEBUG_LOG_LEVEL=debug
AUTH_DEBUG=true
