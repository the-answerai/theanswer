# ==================================================
# FLOWISE CONFIGURATION
# ==================================================
# These are Flowise-specific settings not handled by manifest
APIKEY_PATH=/var/efs/
SECRETKEY_PATH=/var/efs/
LOG_PATH=/var/efs/logs
DISABLE_FLOWISE_TELEMETRY=true
IFRAME_ORIGINS=*
CORS_ORIGINS=*

# API key and secret storage - S3 bucket handled by manifest
APIKEY_STORAGE_TYPE=db
STORAGE_TYPE=s3

# Enable Flagsmith 
FLAGSMITH_ENVIRONMENT_ID=

# Disabled by default, auto generated but can set but will invalidate the current API Keys in DB if
# # FLOWISE_SECRETKEY_OVERWRITE=  

# Session Secret: Cryptographically secure secret for Express session cookies
# Used for OAuth state management and session security - must remain consistent
# Generate with: openssl rand -base64 64
SESSION_SECRET=  # Required: Keep consistent across deployments

# ==================================================
# AUTH0 CONFIGURATION
# ==================================================
# Auth0 settings for Flowise API JWT token validation
AUTH0_JWKS_URI=
AUTH0_ISSUER_BASE_URL=  # Required: For JWT token validation
AUTH0_BASE_URL=  # Should match CLIENT_DOMAIN from deployment
AUTH0_AUDIENCE=https://theanswer.ai  # Required: For JWT token validation
AUTH0_SCOPE="openid profile email"
AUTH0_TOKEN_SIGN_ALG=RS256  # JWT signing algorithm (defaults to HS256 in code)
AUTH0_DOMAIN=
AUTH0_ORGANIZATION_ID=
AUTH0_CLIENT_ID=  # Optional: Only needed if using OAuth endpoints
AUTH0_CLIENT_SECRET=  # Optional: Only needed if using OAuth endpoints

# Auth0 Secret: Required for JWT token validation
# Must match the web app's AUTH0_SECRET for session consistency
AUTH0_SECRET=  # Required: Same as web app

# # ==================================================
# # DEBUG & LOGGING CONFIGURATION
# # ==================================================
# # Debug settings (disable in production for security and performance)
DEBUG=false
VERBOSE=false
AUTH_DEBUG=false

# Log levels: error, warn, info, debug (debug shows most detail)
LOG_LEVEL=warn
DEBUG_LOG_LEVEL=warn

# Minimum Required OpenAI API Key
AAI_DEFAULT_OPENAI_API_KEY=

# ==================================================
# LANGFUSE CONFIGURATION
# ==================================================
# Langfuse tracing and monitoring
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com


